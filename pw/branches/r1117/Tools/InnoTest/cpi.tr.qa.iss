[Setup]
; NOTE: The value of AppId uniquely identifies this application.
; Do not use the same AppId value in installers for other applications.
; (To generate a new GUID, click Tools | Generate GUID inside the IDE.)
AppId={{A2770EAD-85C2-4172-B29F-3951C97D54CB}
AppName=Prime World Test Realm(QA)
AppVersion={#APP_VERSION}
AppPublisher=Nival
AppPublisherURL=http://www.nival.com/
AppSupportURL=http://www.nival.com/
AppUpdatesURL=http://www.nival.com/
;DefaultDirName={userappdata}\Prime World
DefaultDirName={userappdata}\PrimeWorldTRQA
DisableDirPage = no
DefaultGroupName=Prime World Test Realm(QA)
AllowNoIcons=yes
LicenseFile=Common\License.rtf
;InfoBeforeFile=C:\InnoTest\infoBefore.txt
;InfoAfterFile=C:\InnoTest\infoAfter.txt
OutputBaseFilename=PrimeWorldTRQA
Compression=lzma
SolidCompression=yes
DisableFinishedPage=yes
DisableProgramGroupPage=yes
AllowUNCPath=no
PrivilegesRequired = lowest 
Uninstallable = yes
OutputDir=Output\tr.qa

;SignTool=Standart $f
;SignTool="C:\Program Files\Microsoft SDKs\Windows\v7.0A\bin\signtool.exe" sign /f "C:\Patcher\Is\certif.pfx" /p TheLastDigitOfPi314 $p $f

[Languages]
Name: "russian"; MessagesFile: "compiler:Languages\Russian.isl"

[Tasks]
Name: "desktopicon"; Description: "{cm:CreateDesktopIcon}"; GroupDescription: "{cm:AdditionalIcons}"; Flags: unchecked

[Files]
Source: "Source\tr.qa\*"; DestDir: "{app}"; Flags: ignoreversion
Source: "Common\*"; DestDir: "{app}"; Flags: ignoreversion recursesubdirs createallsubdirs
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[Icons]
