;Name: "{group}\Руководство пользователя"; Filename: "{app}\ReadMe.txt"
Name: "{commonprograms}\Nival\Prime World Test Realm(QA)\Пользовательское соглашение"; Filename: "{app}\License.rtf"
Name: "{commonprograms}\Nival\Prime World Test Realm(QA)\Удалить игру"; Filename: "{uninstallexe}"
Name: "{commondesktop}\Prime World Test Realm(QA)"; Filename: "{app}\PWLauncher.exe"; Tasks: desktopicon ; IconFilename: "{app}\PW.ico"

[Run]
Filename: "{app}\PWLauncher.exe"; Description: "{cm:LaunchProgram,Prime World}"; Flags: nowait postinstall skipifsilent


[UninstallDelete]
