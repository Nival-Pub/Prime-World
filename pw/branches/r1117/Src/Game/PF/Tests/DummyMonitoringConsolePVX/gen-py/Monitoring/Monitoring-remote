import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import Monitoring
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '   GetPerfCounters()'
  print '  i32 RegisterPerfCounters( counters)'
  print '  i32 UnregisterPerfCounters( counters)'
  print '  i32 UnregisterAllPerfCounters()'
  print '   GetRegisteredPerfCounters()'
  print '   GetPerfCounterSamples()'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = Monitoring.Client(protocol)
transport.open()

if cmd == 'GetPerfCounters':
  if len(args) != 0:
    print 'GetPerfCounters requires 0 args'
    sys.exit(1)
  pp.pprint(client.GetPerfCounters())

elif cmd == 'RegisterPerfCounters':
  if len(args) != 1:
    print 'RegisterPerfCounters requires 1 args'
    sys.exit(1)
  pp.pprint(client.RegisterPerfCounters(eval(args[0]),))

elif cmd == 'UnregisterPerfCounters':
  if len(args) != 1:
    print 'UnregisterPerfCounters requires 1 args'
    sys.exit(1)
  pp.pprint(client.UnregisterPerfCounters(eval(args[0]),))

elif cmd == 'UnregisterAllPerfCounters':
  if len(args) != 0:
    print 'UnregisterAllPerfCounters requires 0 args'
    sys.exit(1)
  pp.pprint(client.UnregisterAllPerfCounters())

elif cmd == 'GetRegisteredPerfCounters':
  if len(args) != 0:
    print 'GetRegisteredPerfCounters requires 0 args'
    sys.exit(1)
  pp.pprint(client.GetRegisteredPerfCounters())

elif cmd == 'GetPerfCounterSamples':
  if len(args) != 0:
    print 'GetPerfCounterSamples requires 0 args'
    sys.exit(1)
  pp.pprint(client.GetPerfCounterSamples())

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
